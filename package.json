{
  "name": "executable-on-save",
  "publisher": "jimeh",
  "displayName": "Executable on Save",
  "description": "Make files executable (chmod +x) on save if they start with \"#!\"",
  "version": "0.2.5",
  "license": "MIT",
  "author": {
    "name": "Jim Myhrberg"
  },
  "homepage": "https://github.com/jimeh/vscode-executable-on-save",
  "repository": {
    "type": "git",
    "url": "https://github.com/jimeh/vscode-executable-on-save"
  },
  "bugs": {
    "url": "https://github.com/jimeh/vscode-executable-on-save/issues"
  },
  "qna": false,
  "icon": "img/icon.png",
  "extensionKind": [
    "workspace"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": {
      "supported": false,
      "description": "Requires a file system to perform file permissions changes."
    }
  },
  "galleryBanner": {
    "color": "#1E1E24",
    "theme": "dark"
  },
  "keywords": [
    "automation",
    "bash",
    "chmod",
    "chmod +x",
    "executable",
    "execute-bit",
    "file-mode",
    "hashbang",
    "linux",
    "macos",
    "on-save",
    "permissions",
    "posix",
    "save-hook",
    "script",
    "scripts",
    "sh",
    "shebang",
    "shell",
    "unix",
    "zsh"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "dist/extension.js",
    "img/icon.png",
    "package.json"
  ],
  "main": "./dist/extension.js",
  "engines": {
    "node": "^20.0.0",
    "vscode": "^1.95.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "executable-on-save.makeExecutableIfScript",
        "title": "Make Executable If Script",
        "enablement": "editorIsOpen"
      }
    ],
    "configuration": {
      "title": "Executable on Save",
      "properties": {
        "executableOnSave.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Mark files beginning with \"#!\" as executable on save."
        },
        "executableOnSave.permissionStrategy": {
          "type": "string",
          "enum": [
            "umask",
            "read-based",
            "all"
          ],
          "enumItemLabels": [
            "Umask (respects system umask)",
            "Read-based (execute where read exists)",
            "All (execute for everyone)"
          ],
          "markdownEnumDescriptions": [
            "Respects system umask when adding execute bits (default, recommended)",
            "Only adds execute bits where corresponding read bits exist",
            "Always adds execute bits for user, group, and other"
          ],
          "default": "umask",
          "markdownDescription": "Permission strategy for setting execute bits on files with shebangs."
        },
        "executableOnSave.silent": {
          "type": "boolean",
          "default": false,
          "description": "Suppress information notifications when permissions change."
        },
        "executableOnSave.silentErrors": {
          "type": "boolean",
          "default": false,
          "description": "Suppress error notifications when permission updates fail."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run bundle",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "bundle": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "package": "npx -y @vscode/vsce package --no-dependencies --out $(node -p \"const p=require('./package.json');p.publisher+'.'+p.name+'-'+p.version+'.vsix'\")",
    "vsce:ls": "pnpm run vscode:prepublish && npx -y @vscode/vsce ls --no-dependencies",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint:prettier": "prettier --check src",
    "lint:eslint": "eslint src",
    "lint": "npm-run-all -s lint:prettier lint:eslint",
    "lint:fix": "eslint --fix src && prettier --write src",
    "test": "vscode-test",
    "verify:vsix-files": "tsx scripts/verify-vsix-files.ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "overrides": {
      "punycode": "npm:punycode.js@^2.3.1"
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
