{
  "name": "mark-executable-on-save",
  "displayName": "mark-executable-on-save",
  "description": "Mark files as executable (chmod +x) on save if they starts with `#!`.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mark-executable-on-save.markExecutableIfScript",
        "title": "Mark Executable If Script"
      }
    ],
    "configuration": {
      "title": "Mark Executable on Save",
      "properties": {
        "markExecutableOnSave.enableOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Mark files beginning with #! as executable on save."
        },
        "markExecutableOnSave.permissionStrategy": {
          "type": "string",
          "enum": [
            "standard",
            "safe"
          ],
          "default": "safe",
          "description": "Permission strategy: 'standard' adds execute for all (user, group, other), 'safe' only adds execute where read permission exists."
        },
        "markExecutableOnSave.silent": {
          "type": "boolean",
          "default": false,
          "description": "Suppress information notifications when permissions change."
        },
        "markExecutableOnSave.silentErrors": {
          "type": "boolean",
          "default": false,
          "description": "Suppress error notifications when permission updates fail."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint:prettier": "prettier --check src",
    "lint:eslint": "eslint src",
    "lint": "npm-run-all -s lint:prettier lint:eslint",
    "lint:fix": "eslint --fix src && prettier --write src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "typescript": "^5.9.2"
  }
}
